{
  "name": "avinya-task-backend",
  "version": "0.0.0",
  "private": true,
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc && cp -r src/protos dist/ && cp -r src/assets dist/",
    "start": "node -r dotenv/config dist/app.js dotenv_config_path=./.env.production",
    "dev": "nodemon -x ts-node -r dotenv/config src/app.ts dotenv_config_path=./.env.development",
    "gen:proto": "proto-loader-gen-types --grpcLib=@grpc/grpc-js --outDir=./src/protos ./src/protos/*.proto",
    "docs": "npx postman-to-markdown docs/postman/Backend.postman_collection.json; mv docs/postman/Backend.md README.md",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.5.0",
    "globals": "^15.6.0",
    "nodemon": "^3.0.3",
    "postman-to-markdown": "^1.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.1"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.9",
    "@grpc/proto-loader": "^0.7.13",
    "@grpc/reflection": "^1.0.4",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "edf-parser": "^0.2.4",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs": "^0.0.1-security",
    "google-auth-library": "^9.6.3",
    "grpc-tools": "^1.12.4",
    "grpc-web": "^1.5.0",
    "http": "^0.0.1-security",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.2.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.9",
    "path": "^0.12.7",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
